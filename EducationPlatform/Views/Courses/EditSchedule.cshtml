@model EducationPlatform.Models.ViewModels.Courses.CourseEditSchedulesViewModel

@{
    ViewData["Title"] = "Редагування розкладу";
}

<div class="row">
    <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12 col-xs-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <div>
                    <h3 class="card-title text-uppercase">Курс: <span>@Model.Course.Subject.Name</span></h3>

                    <p class="mb-3">Викладач: <span class="font-weight-bold">@Model.Course.Teacher.LastName @Model.Course.Teacher.FirstName @Model.Course.Teacher.MiddleName</span></p>
                    <p>Початок: <span class="font-weight-bold">@Model.Course.Start.ToString("dd.MM.yyyy")</span></p>
                    <p class="mb-3">Кінець: <span class="font-weight-bold">@Model.Course.End.ToString("dd.MM.yyyy")</span></p>
                    <p class="mb-3">Модулів: <span class="font-weight-bold">@Model.Modules.Count</span></p>
                    <p class="mb-4">
                        Опис: <span class="text-muted">@Model.Course.Subject.Description</span>
                    </p>
                </div>

                <div>
                    <h6 class="mb-3">Модулі</h6>

                    <form method="post" asp-controller="Courses" asp-action="EditSchedule">
                        @Html.HiddenFor(x => x.CourseId)
                        @Html.HiddenFor(x => x.Course.SubjectId)


                        @for (var i = 0; i < Model.Modules.Count; i++)
                        {
                            @Html.HiddenFor(x => x.Modules[i].Id)
                            <div class="form-group row mb-1">
                                <label asp-for="@Model.Modules[i].Date" class="col-sm-3 col-form-label mb-0">@Model.Modules[i].Name</label>
                                <div class="col-sm-9 d-flex align-items-center">
                                    <input type="date" class="form-control form-control-sm" asp-for="@Model.Modules[i].Date">
                                </div>
                            </div>
                        }

