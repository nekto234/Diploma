
@{
    Layout = "_LayoutAuth";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-3 px-4 px-sm-5">
                <div class="text-center">
                    <img src="~/lib/template/images/Logo EP.svg" alt="logo">
                </div>
                <h3 class="mt-2 text-center">Вітаємо</h3>
                <p class="text-center">Посилання для відновлення паролю відправлено</p>
                <div class="mt-3">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-block btn-primary font-weight-medium auth-form-btn text-white">Повернутися</a>
                </div>
            </div>
        </div>
    </div>
</div>
